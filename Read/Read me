#!/bin/bash

# guessinggame.sh
# Script qui demande √† l'utilisateur de deviner le nombre de fichiers dans le r√©pertoire actuel.

# Fonction pour compter le nombre de fichiers dans le r√©pertoire courant
count_files() {
    local num_files
    num_files=$(ls -1 | wc -l)
    echo $num_files
}

# Fonction pour demander √† l'utilisateur de deviner
guess_number() {
    local target=$1
    local guess

    while true; do
        read -p "Devinez combien de fichiers se trouvent dans le r√©pertoire actuel: " guess
        
        # V√©rification si l'utilisateur a saisi un nombre
        if ! [[ "$guess" =~ ^[0-9]+$ ]]; then
            echo "Veuillez entrer un nombre valide."
            continue
        fi

        # Comparaison du nombre devin√© avec le nombre r√©el
        if [ "$guess" -lt "$target" ]; then
            echo "Trop bas. Essayez encore."
        elif [ "$guess" -gt "$target" ]; then
            echo "Trop haut. Essayez encore."
        else
            echo "üéâ F√©licitations ! Vous avez devin√© le bon nombre de fichiers."
            break
        fi
    done
}

# Programme principal
main() {
    local total_files
    total_files=$(count_files)
    guess_number "$total_files"
}

# Appel de la fonction principale
main

